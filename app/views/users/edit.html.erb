<!--プロフィール編集ページ-->
<div class="container">
 <div class="row">
  <div class="mt-4 mx-auto col-sm-12 col-md-8 col-lg-5 px-5">
      
   <h2>User info</h2>

   <% if @user.errors.any? %>
    <div>
     <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
       <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
      </ul>
    </div>
   <% end %>

   <form>
   <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>  
   
     <p>Name</p>
      <%= f.text_field :name %>
   
     <p>Image<p>
      <%= f.file_field :profile_image, accept: "image/*" %>
   
     <p>Introduction</p>
      <%= f.text_area :introduction %>
      
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
   <% end %>
   </form>
   
  </div>
 </div>
</div>

