<h2>User info</h2>

<% if @book.errors.any? %>
 <div>
   <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
 </div>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
 <div class="field">
   <p>Title</p>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <p>Body</p>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Update Book' %>
 </div>
<% end %>
