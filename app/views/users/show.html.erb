<!--ユーザー詳細ページ-->

<h2>User info</h2>
  <!--プロフィール画像-->
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <table>
    <tbody>
       <!--ユーザーネーム-->
       <tr>
         <th>name</th>
         <th><%= @user.name %></th>
       </tr>
        <!--自己紹介-->
       <tr>
         <th>introduction</th>
         <th><%= @user.introduction %></th>
       </tr>
    </tbody>
  </table>
  
  <% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
  
<!--新規投稿-->
<h2>New book</h2>
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
      
      <%= f.submit 'Create Book' %>
  <% end %>
     
<!-- ユーザーの投稿一覧 -->
<h2>Books</h2>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p><%= @user.name %></p>
  <table>
   <thead>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th></th>
       <th></th>
     </tr>
   </thead>
   <% @books.each do |book| %>
   <tbody>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
     </tr>
   </tbody>
   <% end %>
 </table>


