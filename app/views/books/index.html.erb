<!--全ユーザーの投稿一覧-->

<!--エラーメッセージ-->
<% if @book.errors.any? %>
 <div>
   <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
 </div>
<% end %>
<h2>Books</h2>
<table>
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
 <% @books.each do |book| %>
 <tbody>
  <tr>
   <td><%= image_tag book.user.get_profile_image(100,100) %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
  </tr>
 </tbody>
 <% end %>
</table>

 <!--部分テンプレート呼び出し-->
 <%= render 'side', user: @user, book: @book %>