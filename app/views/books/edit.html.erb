<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <div>
   <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
   <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
   </ul>
 </div>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>
 <div>
   <p>Title</p>
   <%= f.text_field :title %>
 </div>

 <div>
   <p>Body</p>
   <%= f.text_area :body %>
 </div>

 <div>
   <%= f.submit 'Update Book' %>
 </div>
<% end %>


 <div><%= link_to 'Show', book_path(@book.id) %></div>

 <div><%= link_to 'Back', books_path %></div>
</div>