<!--部分テンプレート-->
<h2>User info</h2>
  <!--プロフィール画像-->
  <p><%= image_tag user.get_profile_image(100,100) %></p>
  <table>
    <tbody>
       <!--ユーザーネーム-->
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
        <!--自己紹介-->
       <tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
       </tr>
    </tbody>
  </table>

  <p><%= link_to "プロフィール編集", edit_user_path(user.id) %></p>

<!--新規投稿-->
<h2>New book</h2>
   <%= form_with model: Book.new do |f| %>

    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>

      <%= f.submit 'Create Book' %>
  <% end %>