<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!--FontAwesomeを使用していく準備-->
    <script src="https://kit.fontawesome.com/0d9a4945d7.js" crossorigin="anonymous"></script>

    <!--Bootstrapを使用していく準備-->
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
   <header class="bg-dark text-white">
     <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
      <%= link_to "Bookers", root_path %>
      <% if user_signed_in? %>
      <li>
        <!--current_user.idはログインしていないと使えない-->
        <%= link_to "Home", user_path(current_user.id) %>
      </li>
    
      <li>
        <%= link_to "Users", users_path %>
      </li>
      <li>
        <%= link_to "Books", books_path %>
      </li>
      <li>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      </li>
    <% else %>
      <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
    <% end %>
    </div>
    </nav>
   </header>
    <%= yield %>
    
    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>
